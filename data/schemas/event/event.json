{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/event/event.json",
  "title": "Event Schema",
  "description": "Schema for events in the event-based processing system, consisting of an event header and an array of entities",
  "type": "object",
  "properties": {
    "eventHeader": {
      "$ref": "event-header.json",
      "description": "Event header containing metadata about the event"
    },
    "entities": {
      "type": "array",
      "description": "Array of entities affected by this event",
      "items": {
        "oneOf": [
          {
            "$ref": "../entity/car.json"
          },
          {
            "$ref": "../entity/loan.json"
          },
          {
            "$ref": "../entity/loan-payment.json"
          },
          {
            "$ref": "../entity/service-record.json"
          },
          {
            "$ref": "../entity/service-details.json"
          },
          {
            "$ref": "../entity/part-used.json"
          }
        ]
      },
      "minItems": 1
    },
    "filters": {
      "type": "array",
      "description": "Filter configurations for this schema version",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "consumerId": { "type": "string" },
          "outputTopic": { "type": "string" },
          "conditions": { 
            "type": "array",
            "items": { "type": "object" }
          },
          "enabled": { "type": "boolean" },
          "conditionLogic": { "type": "string", "enum": ["AND", "OR"] },
          "status": { "type": "string" },
          "version": { "type": "integer" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" },
          "approvedBy": { "type": "string" },
          "approvedAt": { "type": "string", "format": "date-time" },
          "deployedAt": { "type": "string", "format": "date-time" },
          "deploymentError": { "type": "string" },
          "flinkStatementIds": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["id", "name", "outputTopic", "conditions", "enabled"]
      }
    }
  },
  "required": ["eventHeader", "entities"],
  "additionalProperties": false
}

