{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/event/event.json",
  "title": "Event Schema",
  "description": "Schema for events in the event-based processing system, consisting of an event header and an array of entities",
  "type": "object",
  "properties": {
    "eventHeader": {
      "$ref": "event-header.json",
      "description": "Event header containing metadata about the event"
    },
    "entities": {
      "type": "array",
      "description": "Array of entities affected by this event",
      "items": {
        "oneOf": [
          {
            "$ref": "../entity/car.json"
          },
          {
            "$ref": "../entity/loan.json"
          },
          {
            "$ref": "../entity/loan-payment.json"
          },
          {
            "$ref": "../entity/service-record.json"
          },
          {
            "$ref": "../entity/service-details.json"
          },
          {
            "$ref": "../entity/part-used.json"
          }
        ]
      },
      "minItems": 1
    }
  },
  "required": ["eventHeader", "entities"],
  "additionalProperties": false
}

