{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/entity/loan.json",
  "title": "Loan Entity Schema",
  "description": "JSON schema for Loan entity in the event-based processing system",
  "type": "object",
  "properties": {
    "entityHeader": {
      "$ref": "entity-header.json"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the loan"
    },
    "carId": {
      "type": "string",
      "description": "Identifier of the car associated with this loan"
    },
    "financialInstitution": {
      "oneOf": [
        {
          "type": "string",
          "description": "Name of the institution providing the loan (simple string format)"
        },
        {
          "type": "object",
          "description": "Financial institution information object",
          "properties": {
            "name": { "type": "string" },
            "routingNumber": { "type": "string" },
            "accountNumber": { "type": "string" },
            "contact": {
              "type": "object",
              "properties": {
                "phone": { "type": "string" },
                "email": { "type": "string", "format": "email" }
              }
            },
            "description": { "type": "string" }
          }
        }
      ],
      "description": "Name of the institution providing the loan (string) or financial institution information object"
    },
    "balance": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01,
      "description": "Current outstanding balance"
    },
    "lastPaidDate": {
      "type": "string",
      "format": "date-time",
      "description": "Date of the last payment made"
    },
    "loanAmount": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01,
      "description": "Original loan amount"
    },
    "interestRate": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Annual interest rate as a decimal (e.g., 0.045 for 4.5%)"
    },
    "termMonths": {
      "type": "integer",
      "minimum": 1,
      "maximum": 480,
      "description": "Loan term in months (1-40 years)"
    },
    "startDate": {
      "type": "string",
      "format": "date-time",
      "description": "Date when the loan started"
    },
    "status": {
      "type": "string",
      "enum": ["active", "paid_off", "defaulted", "cancelled"],
      "description": "Current status of the loan"
    },
    "monthlyPayment": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01,
      "description": "Monthly payment amount"
    },
    "downPayment": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01,
      "description": "Down payment amount"
    },
    "downPaymentDate": {
      "type": "string",
      "format": "date-time",
      "description": "Date when the down payment was made"
    },
    "description": {
      "type": "string",
      "description": "Description of loan terms, purpose, and conditions"
    },
    "paymentHistory": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "paymentId": { "type": "string" },
          "amount": { "type": "string" },
          "date": { "type": "string", "format": "date-time" },
          "status": { "type": "string" },
          "transactionId": { "type": "string" },
          "description": { "type": "string" }
        }
      },
      "description": "Array of payment history records"
    },
    "terms": {
      "type": "object",
      "description": "Loan terms information",
      "properties": {
        "interestRate": { "type": "string" },
        "termMonths": { "type": "integer" },
        "monthlyPayment": { "type": "string" },
        "startDate": { "type": "string", "format": "date-time" },
        "endDate": { "type": "string", "format": "date-time" },
        "description": { "type": "string" }
      }
    },
    "payments": {
      "type": "array",
      "items": {
        "$ref": "loan-payment.json"
      },
      "description": "Array of payment records for this loan"
    }
  },
  "required": ["entityHeader", "id", "carId", "financialInstitution", "balance", "lastPaidDate", "loanAmount", "interestRate", "termMonths", "startDate", "status", "monthlyPayment"],
  "additionalProperties": true
}
