{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/schema.entity.service-details.json",
  "title": "ServiceDetails Entity Schema",
  "description": "JSON schema for ServiceDetails entity in the event-based processing system",
  "type": "object",
  "properties": {
    "entity": {
      "$ref": "schema.entity.header.json"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the service details"
    },
    "serviceId": {
      "type": "string",
      "description": "Unique identifier for the service"
    },
    "carId": {
      "type": "string",
      "description": "Identifier of the car this service was performed on"
    },
    "dealerId": {
      "type": "string",
      "description": "Unique identifier for the dealer"
    },
    "dealerName": {
      "type": "string",
      "description": "Name of the dealer"
    },
    "technicianId": {
      "type": "string",
      "description": "Unique identifier for the technician"
    },
    "technicianName": {
      "type": "string",
      "description": "Name of the technician"
    },
    "serviceNotes": {
      "type": "string",
      "description": "Notes about the service performed"
    },
    "warrantyWork": {
      "type": "boolean",
      "description": "Whether this was warranty work"
    },
    "partsUsed": {
      "type": "array",
      "items": {
        "$ref": "schema.entity.part-used.json"
      },
      "description": "List of parts used in the service"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the service details were created"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the service details were last updated"
    }
  },
  "required": ["entity", "id", "serviceId", "carId", "dealerId", "dealerName", "technicianId", "technicianName", "serviceNotes", "warrantyWork", "partsUsed", "createdAt", "updatedAt"],
  "additionalProperties": false
}
