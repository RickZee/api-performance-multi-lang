# Example Aurora environment file
# Copy to repo root as .env.aurora (kept out of git) and fill in values.
#
# Usage:
#   cp env-examples/aurora.env.example .env.aurora
#   source .env.aurora

# Aurora R2DBC URL (for Java/Spring usage)
export AURORA_R2DBC_URL="r2dbc:postgresql://<aurora-endpoint>:5432/car_entities"

# Direct Aurora credentials (for apps)
export AURORA_USERNAME="postgres"
export AURORA_PASSWORD="REPLACE_ME"

# For Confluent Cloud managed Postgres CDC connector configs (cdc-streaming/)
export DB_HOSTNAME="<aurora-endpoint>"
export DB_PORT="5432"
export DB_USERNAME="postgres"
export DB_PASSWORD="REPLACE_ME"
export DB_NAME="car_entities"

# Toggle some compose stacks to use Aurora vs local Postgres
export USE_AURORA="true"


